<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/s"
    tools:context="com.example.matthew.databox.MainActivity"
    android:id="@+id/matthew">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="35dp"
        android:columnCount="3"
        android:id="@+id/gridLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload"
            android:id="@+id/upload_b"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView android:text="Xiaojing is Super Cute!"
            android:textColor="#80F2FFE1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:singleLine="true"
            android:layout_alignParentTop="true"
            android:layout_row="11"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/download"
            android:id="@+id/download_b"
            android:layout_alignTop="@+id/upload_b"
            android:layout_alignParentEnd="true"
            android:layout_row="0"
            android:layout_column="2" />

    </GridLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_files"
        android:id="@+id/textView3"
        android:layout_below="@+id/gridLayout"
        android:layout_alignParentStart="true" />


</RelativeLayout>
